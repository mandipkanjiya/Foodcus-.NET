<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rounded_white_curve_dialog"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/action_bar"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_height="?actionBarSize">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_cross"
                android:padding="@dimen/_5sdp" />

            <TextView
                android:id="@+id/tvTitle"
                style="@style/darkTextBold"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="Transaction Details"
                android:textColor="@color/textColor"
                android:textSize="@dimen/_12sdp" />
        </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:padding="@dimen/_3sdp">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center"
            android:src="@drawable/app_icon"/>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:textSize="@dimen/_10sdp"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/black"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvStoreName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:textSize="@dimen/_10sdp"
                android:text=""
                android:layout_marginTop="@dimen/_2sdp"

                android:textColor="@color/main_blue"
                />






        </androidx.appcompat.widget.LinearLayoutCompat>
    </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:visibility="visible"

            android:background="@color/strokeditcolor" />
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:textSize="@dimen/_10sdp"
                android:text="Transaction Number"
                android:layout_weight="1"
                android:textColor="@color/textColor"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTransactionnumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:textSize="@dimen/_10sdp"
                android:maxLines="1"

                android:text=""
                android:textColor="@color/textColor"
                />
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:textSize="@dimen/_9sdp"
                android:text="Customer Name"
                android:layout_weight="1"
                android:textColor="@color/textColor"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvCustomerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:textSize="@dimen/_9sdp"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/textColor"
                />
        </androidx.appcompat.widget.LinearLayoutCompat>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:visibility="visible"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@color/strokeditcolor" />
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvOrderId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:textSize="@dimen/_10sdp"
                android:text="Total"
                android:layout_weight="1"
                android:textColor="@color/textColor"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTotalAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:textSize="@dimen/_10sdp"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/textColor"
                />
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:textSize="@dimen/_9sdp"
                android:text="Savings"
                android:layout_weight="1"
                android:textColor="@color/textColor"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvSavingsAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:textSize="@dimen/_9sdp"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/textColor"
                />
        </androidx.appcompat.widget.LinearLayoutCompat>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:visibility="visible"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@color/strokeditcolor" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:padding="@dimen/_7sdp"
            android:background="@drawable/rounded_live_order_small">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvcoin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:textSize="@dimen/_10sdp"
                android:layout_weight="1"
                android:text="Points Earned"
                android:textColor="@color/textColor"
                />
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivcoin"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:src="@drawable/ic_coin"
                android:backgroundTint="@color/tintcolor"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvEarnPoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_2sdp"
                android:fontFamily="@font/poppins_bold"
                android:textSize="@dimen/_10sdp"
                android:text=""
                android:textColor="@color/textColor"
                />
        </LinearLayout>
    </LinearLayout>
</layout>