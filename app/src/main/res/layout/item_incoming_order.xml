<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<RelativeLayout
    android:id="@+id/relMain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_dashborad"
    android:orientation="vertical"
    android:layout_marginHorizontal="@dimen/_5sdp"
    android:layout_marginVertical="@dimen/_2sdp">


    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/rvMain"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_85sdp"
        android:orientation="horizontal"
        >
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_2sdp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_5sdp">
            <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvOrderId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:textSize="@dimen/_9sdp"
            android:text="#45454545"
            android:textColor="@color/textColor"
            />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:textSize="@dimen/_7sdp"
                android:text="Alexendra x"
                android:layout_below="@+id/tvOrderId"
                android:textColor="@color/gray"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvSection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:textSize="@dimen/_7sdp"
                android:text=""
                android:maxLines="1"
                android:layout_below="@+id/tvName"
                android:textColor="@color/gray"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvOrderNote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:textSize="@dimen/_7sdp"
                android:text=""
                android:maxLines="1"
                android:layout_below="@+id/tvSection"
                android:textColor="@color/gray"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_below="@+id/tvOrderNote"
                android:layout_alignParentBottom="true"
                android:gravity="bottom"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/llTakeaway"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_25sdp"
                    android:paddingHorizontal="@dimen/_5sdp"

                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_takeaway">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivTakeaway"
                        android:layout_width="@dimen/_9sdp"
                        android:layout_height="@dimen/_9sdp"
                        android:src="@drawable/ic_dinin"
                        android:tint="@color/gray"
                        android:layout_gravity="center"
                        />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvOrderType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="@dimen/_6sdp"
                        android:text="Takeaway"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:textColor="@color/gray"
                        />
                </androidx.appcompat.widget.LinearLayoutCompat>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                </LinearLayout>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/llPickUp"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_20sdp"
                    android:paddingHorizontal="@dimen/_5sdp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:visibility="gone"
                    android:background="@drawable/rounded_time">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_bold"
                        android:textSize="@dimen/_6sdp"
                        android:text="2024-01-29"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/darkGreen"
                        />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvRemainingTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_bold"
                        android:textSize="@dimen/_6sdp"
                        android:text="16:45"
                        android:visibility="visible"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/darkGreen"
                        />
                </androidx.appcompat.widget.LinearLayoutCompat>
            </LinearLayout>


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvAutoReject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:textSize="@dimen/_6sdp"
                android:text="Auto reject in 4:15"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:textColor="@color/colorF45757"
                android:textAlignment="textEnd"
                android:visibility="gone"
                android:layout_marginBottom="@dimen/_8sdp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_2sdp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvItems"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_order_items"
                tools:itemCount="10"
                android:layout_above="@id/tvViewMore"

                />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvViewMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:textSize="@dimen/_3sdp"
                android:text="View More"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_above="@id/llBottom"
                android:layout_marginBottom="@dimen/_2sdp"
                android:layout_marginStart="@dimen/_2sdp"
                android:textColor="@color/black"
                android:visibility="gone"
                />
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/llBottom"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:visibility="gone"
                    android:background="@drawable/rounded_time">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_bold"
                        android:textSize="@dimen/_6sdp"
                        android:text="15"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/darkGreen"
                        />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_bold"
                        android:textSize="@dimen/_3sdp"
                        android:text="min"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/darkGreen"
                        />
                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnAccept"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_button_small"
                    android:backgroundTint="@color/darkGreen"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Accept"
                    android:textAllCaps="false"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_5sdp"
                    android:visibility="visible"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnReject"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="@color/colorF45757"
                    android:background="@drawable/rounded_button_small"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Reject"
                    android:textAllCaps="false"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/white"

                    android:textSize="@dimen/_5sdp" />

            </androidx.appcompat.widget.LinearLayoutCompat>
        </RelativeLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>


</RelativeLayout>
</layout>