<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="@dimen/_5sdp">


            <RelativeLayout
                android:id="@+id/rvMain"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_17sdp"
                android:layout_gravity="center">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/llQty"
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="@dimen/_12sdp"
                    android:orientation="horizontal"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:background="@drawable/circle_button"
                    >
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvQnty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_bold"
                        android:textSize="@dimen/_5sdp"
                        android:text="1"
                        android:textColor="@color/main_blue"
                        />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvCross"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:text="X"
                        android:textColor="@color/main_blue"
                        android:textSize="@dimen/_3sdp" />
                </androidx.appcompat.widget.LinearLayoutCompat>



                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvItemName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="@dimen/_5sdp"
                    android:layout_toEndOf="@id/llQty"
                    android:text="Veggie  Taco"
                    android:gravity="start"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_toStartOf="@id/llItemPrice"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:textColor="@color/black"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvItemDesc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="@dimen/_3sdp"
                        android:maxLines="2"
                        android:layout_toEndOf="@id/llQty"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_toStartOf="@id/llItemPrice"
                        android:layout_below="@+id/tvItemName"
                        android:text="Add-ons:1x chipolate pappers"

                        android:visibility="visible"
                        android:textColor="@color/gray"
                        />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/llItemPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:gravity="center"
                    android:padding="@dimen/_1sdp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/rounded_live_order_small"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_3sdp">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvItemPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:textSize="@dimen/_5sdp"
                        android:text="$12.30"

                       android:padding="@dimen/_1sdp"
                        android:textColor="@color/black"
                        />
                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvItemDescPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_alignParentEnd="true"
                    android:textSize="@dimen/_4sdp"
                    android:layout_below="@id/llItemPrice"
                    android:text="$12.30"
                    android:gravity="center"
                    android:visibility="invisible"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:textColor="@color/black"
                    />
            </RelativeLayout>

        <View
            android:id="@+id/viewLine"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/color90FFFFFF"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_below="@+id/rvMain" />

    </RelativeLayout>
</layout>